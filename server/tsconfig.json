{
   "compilerOptions": {
      "lib": ["esnext", "dom"],
      "types": [
        "jest"
      ],
      "typeRoots": [
        "./custom-typings.d.ts",
        "./node_modules/@types"
      ],
      "target": "ES2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "strictNullChecks": true
   }
}

